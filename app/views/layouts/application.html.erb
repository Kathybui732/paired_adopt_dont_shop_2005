<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav>
      <h3><%= link_to "ALL PETS", "/pets" %></h3>
      <h3><%= link_to "ALL SHELTERS", "/shelters" %></h3>
      <p> Favorite Indicator: <%= @favorites.count %> </p>
      </nav>
    </header>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
