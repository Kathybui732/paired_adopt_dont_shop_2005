<header>
<h1>ANIMAL SHELTERS INDEX</h1>
</header>

<section class="indexpage">

<% @shelters.each do |shelter| %>

  <section class="shelters-<%= shelter.id %>">
    <p class="name"><%= link_to "#{shelter.name.upcase}", "/shelters/#{shelter.id}" %><p>
    <p class="editlink">
    <%= link_to "EDIT SHELTER", "/shelters/#{shelter.id}/edit" %>
  </p>

  <p class="deletelink">
    <% if shelter.has_pending_pets(shelter.id) %>
      <%= shelter.name %> has pending pets for adoption!
    <% else %>
      <%= link_to "DELETE #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
    <% end %>
  </p>

  </section>
<% end %>
</section>

<img src="https://www.dogstrust.org.uk/our-centres/glasgow/centre-updates/news/2020/174714lrg_dtglasgowpups.jpg" alt="pets" id="main_page_image">

<footer><h3><%= link_to "CREATE A NEW SHELTER", "/shelters/new" %></h3></footer>
